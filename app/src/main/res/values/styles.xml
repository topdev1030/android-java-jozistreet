<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white_color</item>
        <item name="android:statusBarColor" >@color/white_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:autofilledHighlight" tools:ignore="NewApi">@color/transparent_color</item>
<!--        <item name="android:windowAnimationStyle">@style/AppTheme.WindowTransition</item>-->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/main_color</item>
<!--        <item name="android:fontFamily">@font/normal</item>-->
<!--        <item name="fontFamily">@font/normal</item>-->
<!--        <item name="android:textFontWeight" tools:targetApi="p">900</item>
        <item name="android:fontWeight" tools:targetApi="o">900</item>
        <item name="fontWeight">900</item>-->
    </style>
    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.WindowTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="background">@color/transparent_color</item>
    </style>
    <style name="EditTextStyle">
        <item name="colorAccent">@color/md_grey_800</item>
        <item name="colorPrimary">@color/md_grey_800</item>
        <item name="colorControlNormal">@color/md_grey_800</item>
        <item name="colorControlActivated">@color/md_grey_800</item>
    </style>
    <style name="TextStyleXXLargeRegular">
        <item name="android:textSize">@dimen/text_35</item>
        <item name="android:textColor">@color/md_grey_800</item>
    </style>
    <style name="TextStyleXLargeRegular">
        <item name="android:textSize">@dimen/text_30</item>
        <item name="android:textColor">@color/md_grey_800</item>
    </style>
    <style name="TextStyleLargeRegular">
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:textColor">@color/md_grey_800</item>
    </style>
    <style name="TextStyleNormalRegular">
        <item name="android:textSize">@dimen/text_13</item>
        <item name="android:textColor">@color/md_grey_800</item>
    </style>
    <style name="TextStyleSmallRegular">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textColor">@color/md_grey_800</item>
    </style>
    <style name="BottomSheetStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/transparent_color</item>
        <item name="android:colorBackground">@color/black_color_70</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>
    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowTranslucentStatus">false</item>

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="My.TabText.Style" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
    </style>
</resources>
