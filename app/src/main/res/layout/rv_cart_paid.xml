<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="7dp"
        android:elevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">
            <LinearLayout
                android:id="@+id/lytStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">
                <com.jozistreet.user.widget.ResizableImageView
                    android:id="@+id/imgReady"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_collection_ready"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/imgLink"
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_marker"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imgPhoto"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:riv_corner_radius="7dp"
                    android:scaleType="fitCenter"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Store Name"
                        android:textSize="17sp"
                        android:maxLines="1"
                        android:textColor="@color/md_grey_800"
                        android:fontFamily="@font/semibold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="13dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_marker_grey"/>
                        <TextView
                            android:visibility="visible"
                            android:id="@+id/txtAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_gravity="center_vertical"
                            android:text="12.5Km"
                            android:textSize="12sp"
                            android:maxLines="1"
                            android:textColor="@color/colorAccent"
                            android:fontFamily="@font/normal"/>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imgDel"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:src="@drawable/ic_remove" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_time"/>
                <TextView
                    android:id="@+id/time_label"
                    android:visibility="visible"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/txt_pickup_time"
                    android:textSize="11sp"
                    android:maxLines="1"
                    android:textColor="@color/md_grey_800"
                    android:fontFamily="@font/normal"/>
                <TextView
                    android:id="@+id/txtTime"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:text="12:00"
                    android:textSize="13sp"
                    android:maxLines="1"
                    android:textColor="@color/md_grey_800"
                    android:fontFamily="@font/semibold"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lytFee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_delivery_cart"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/txt_delivery_price"
                    android:textSize="11sp"
                    android:maxLines="1"
                    android:textColor="@color/md_grey_800"
                    android:fontFamily="@font/normal"/>
                <TextView
                    android:id="@+id/txtFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:text="12:00"
                    android:layout_marginStart="10dp"
                    android:textSize="13sp"
                    android:maxLines="1"
                    android:textColor="@color/red_color"
                    android:fontFamily="@font/semibold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/order_no"
                        android:textSize="11sp"
                        android:maxLines="1"
                        android:textColor="@color/md_grey_600"
                        android:fontFamily="@font/normal"/>
                    <TextView
                        android:id="@+id/txtCode"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="4.5"
                        android:padding="3dp"
                        android:textSize="9sp"
                        android:maxLines="1"
                        android:textColor="@color/red_color"
                        android:fontFamily="@font/semibold"/>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/md_grey_200"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/txt_quantity"
                        android:textSize="11sp"
                        android:maxLines="1"
                        android:textColor="@color/md_grey_600"
                        android:fontFamily="@font/normal"/>
                    <TextView
                        android:id="@+id/txtQuantity"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="5 items"
                        android:padding="3dp"
                        android:textSize="9sp"
                        android:maxLines="1"
                        android:textColor="@color/md_grey_800"
                        android:fontFamily="@font/semibold"/>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/md_grey_200"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1.5">
                    <TextView
                        android:id="@+id/status_label"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/txt_status"
                        android:textSize="11sp"
                        android:maxLines="1"
                        android:textColor="@color/md_grey_600"
                        android:fontFamily="@font/normal"/>
                    <TextView
                        android:id="@+id/txtStatus"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Ready for collection"
                        android:padding="3dp"
                        android:textSize="9sp"
                        android:maxLines="2"
                        android:textColor="@color/red_color"
                        android:fontFamily="@font/semibold"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="@dimen/margin_10"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/btnViewProduct"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:background="@drawable/bk_blue_rect_20">
                    <TextView
                        style="@style/TextStyleNormalRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_8"
                        android:gravity="center"
                        android:textColor="@color/white_color"
                        android:text="@string/txt_view_product"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btnRate"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:elevation="@dimen/margin_1"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:background="@drawable/bk_white_rect_20">
                    <TextView
                        style="@style/TextStyleNormalRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_8"
                        android:gravity="center"
                        android:textColor="@color/grey_dark"
                        android:text="@string/txt_rate"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>