<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_20"
            android:paddingRight="@dimen/margin_20"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imgUserAvatar"
                    android:layout_width="@dimen/margin_60"
                    android:layout_height="@dimen/margin_60"
                    android:padding="@dimen/margin_3"
                    app:riv_border_color="@color/bg_main_color"
                    app:riv_border_width="@dimen/margin_1"
                    app:riv_corner_radius="@dimen/margin_15" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtName"
                        style="@style/TextStyleNormalRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="Auto Accessories"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtDuration"
                        style="@style/TextStyleNormalRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2021-10-20 ~ 2021-10-25"
                        android:textSize="13sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ic_option"
                    android:layout_width="30dp"
                    android:layout_height="@dimen/margin_40"
                    android:layout_gravity="center|end"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/padding_10"
                    android:src="@drawable/ic_option"
                    app:layout_constraintEnd_toStartOf="@+id/imgNotification"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Easter Month End Specials"
                        android:textSize="15sp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/md_black_1000"
                        android:fontFamily="@font/normal"/>

                    <TextView
                        android:id="@+id/txtDesc"
                        style="@style/TextStyleNormalRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:maxLines="3"
                        android:textSize="13sp" />

                </LinearLayout>
            </LinearLayout>


            <com.tylersuehr.socialtextview.SocialTextView
                android:id="@+id/txtTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                app:hashtagColor="@color/colorAccent" />

            <RelativeLayout
                android:id="@+id/lytMedia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


                <LinearLayout
                    android:id="@+id/lytImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/imgFeed4_1"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            app:riv_border_color="@color/grey_white"
                            app:riv_border_width="1px"
                            app:riv_corner_radius="10dp" />


                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/lytSmallImg"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_weight="0.3"
                        android:orientation="vertical">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/imgFeed4_2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            app:riv_border_color="@color/grey_white"
                            app:riv_border_width="1px"
                            app:riv_corner_radius_top_right="10dp" />

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/imgFeed4_3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:scaleType="fitCenter"
                            app:riv_border_color="@color/grey_white"
                            app:riv_border_width="1px" />

                        <RelativeLayout
                            android:id="@+id/lytLastImg"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/imgFeed4_4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                app:riv_border_color="@color/grey_white"
                                app:riv_border_width="1px"
                                app:riv_corner_radius_bottom_right="10dp" />

                            <TextView
                                android:id="@+id/txtImageCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@color/grey_dark"
                                android:padding="5dp"
                                android:text="+10"
                                android:textColor="@color/white_color"
                                android:textSize="21sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>
                <ImageView
                    android:id="@+id/imgPlay"
                    android:layout_width="@dimen/margin_20"
                    android:layout_height="@dimen/margin_20"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_play"
                    android:visibility="gone"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_like_hand"/>
                <TextView
                    android:id="@+id/txtLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 Likes"
                    android:textSize="13sp"
                    android:padding="12dp"
                    android:textColor="@color/md_grey_800"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/txtSharesAndComments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="15 Comments"
                    android:textSize="13sp"
                    android:textColor="@color/md_grey_800"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_grey_300"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lytLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgLike"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_like_hand"
                        app:tint="@color/md_grey_600" />

                    <TextView
                        android:id="@+id/txtLike"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/txt_like"
                        android:textSize="13sp"
                        android:maxLines="2"
                        android:lineSpacingExtra="2dp"
                        android:textColor="@color/md_grey_600"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:id="@+id/lytComments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgComment"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_comment"
                        android:padding="4dp"
                        app:tint="@color/md_grey_600" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/txt_comments"
                        android:textSize="13sp"
                        android:maxLines="2"
                        android:lineSpacingExtra="2dp"
                        android:textColor="@color/md_grey_600"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:id="@+id/lytShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_share"
                        android:padding="4dp"
                        app:tint="@color/md_grey_600" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/txt_share"
                        android:textSize="13sp"
                        android:maxLines="2"
                        android:lineSpacingExtra="2dp"
                        android:textColor="@color/md_grey_600"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/md_grey_300"/>

    </LinearLayout>


</RelativeLayout>