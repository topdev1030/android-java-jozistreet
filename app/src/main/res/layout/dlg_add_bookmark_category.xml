<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000">
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/lytCreate"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/round_stroke_grey">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Add Category"
            android:textSize="18sp"
            android:textColor="@color/md_grey_800"
            android:fontFamily="@font/bold"/>
        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginStart="20dp"-->
        <!--            android:layout_marginTop="10dp"-->
        <!--            android:text="Category name"-->
        <!--            android:textSize="14sp"-->
        <!--            android:textColor="@color/md_grey_800"-->
        <!--            android:fontFamily="@font/normal"/>-->

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:hint="Category name"
            android:textSize="14sp"
            android:textColor="@color/md_grey_800"
            android:fontFamily="@font/normal"
            android:background="@drawable/round_stroke_blue_50"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:id="@+id/btnLyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_20">
            <LinearLayout
                android:id="@+id/btnCreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:gravity="center"
                android:elevation="@dimen/margin_1"
                android:layout_marginBottom="@dimen/margin_10"
                android:background="@drawable/bk_blue_rect_10">
                <TextView
                    style="@style/TextStyleNormalRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_12"
                    android:gravity="center"
                    android:textColor="@color/txt_main_color"
                    android:text="@string/save"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:gravity="center"
                android:elevation="@dimen/margin_1"
                android:layout_marginBottom="@dimen/margin_10"
                android:background="@drawable/bk_grey_light_rect_10">
                <TextView
                    style="@style/TextStyleNormalRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_12"
                    android:gravity="center"
                    android:textColor="@color/txt_main_color"
                    android:text="@string/cancel"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
