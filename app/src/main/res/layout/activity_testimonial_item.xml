<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F9F9F9"
    android:gravity="center"
    android:layout_marginTop="@dimen/margin_12"
    android:layout_marginBottom="@dimen/margin_12"
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginRight="@dimen/margin_10">

    <!-- Profile Image -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/testimonial_imgPhoto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:riv_corner_radius="35dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"/>

    <!-- Testimonial Description -->
    <TextView
        android:id="@+id/testimonial_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="“As a mom, this app has saved hours of price comparison and deal exploring. I've been using it for years and I haven’t had an issue, ever!”"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginBottom="8dp" />

    <!-- Name of the Person -->
    <TextView
        android:id="@+id/testimonial_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thandeka M."
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp" />

    <!-- Star Rating -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Five star icons -->
        <ImageView
            android:id="@+id/star1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_star"
            app:tint="#FFA500" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_star"
            app:tint="#FFA500" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_star"
            app:tint="#FFA500" />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_star"
            app:tint="#FFA500" />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="23dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_star"
            app:tint="#FFA500" />
    </LinearLayout>
</LinearLayout>