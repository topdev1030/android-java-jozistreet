<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#DDFCF8F8"
        app:cardCornerRadius="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/infoTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#DDFCF8F8"
                android:paddingBottom="@dimen/margin_15"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/TextStyleNormalRegular"
                        android:id="@+id/title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:gravity="start|center_vertical"
                        android:text="@string/txt_option_title"
                        android:textStyle="bold"/>
                    <ImageView
                        android:id="@+id/imgClose"
                        android:layout_width="@dimen/margin_40"
                        android:layout_height="@dimen/margin_40"
                        android:padding="@dimen/margin_10"
                        android:src="@drawable/ic_close"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center|start"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:layout_gravity="center|start">

                    <LinearLayout
                        android:id="@+id/lytView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin_5"
                        android:paddingBottom="@dimen/margin_5"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/margin_13"
                            android:layout_height="@dimen/margin_13"
                            android:src="@drawable/ic_eye"
                            app:tint="@color/grey_dark"
                            android:layout_gravity="center"
                            />
                        <TextView
                            style="@style/TextStyleNormalRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_10"
                            android:layout_gravity="center_vertical"
                            android:text="@string/txt_view_detail"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lytFav"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="@dimen/margin_5"
                        android:paddingBottom="@dimen/margin_5"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imgFav"
                            android:layout_width="@dimen/margin_13"
                            android:layout_height="@dimen/margin_13"
                            android:src="@drawable/ic_unheart"
                            app:tint="@color/grey_dark"
                            android:layout_gravity="center"
                            />
                        <TextView
                            android:id="@+id/txtFav"
                            style="@style/TextStyleNormalRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_10"
                            android:layout_gravity="center_vertical"
                            android:text="@string/txt_add_favourite"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lytBooking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="@dimen/margin_5"
                        android:paddingBottom="@dimen/margin_5"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/margin_13"
                            android:layout_height="@dimen/margin_13"
                            android:src="@drawable/ic_comment"
                            app:tint="@color/grey_dark"
                            android:layout_gravity="center"
                            />
                        <TextView
                            style="@style/TextStyleNormalRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_10"
                            android:layout_gravity="center_vertical"
                            android:text="@string/txt_make_booking"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lytFollow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin_5"
                        android:paddingBottom="@dimen/margin_5"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imgFollow"
                            android:layout_width="@dimen/margin_13"
                            android:layout_height="@dimen/margin_13"
                            android:src="@drawable/ic_delete_user"
                            android:layout_gravity="center"
                            app:tint="@color/grey_dark"
                            />
                        <TextView
                            android:id="@+id/txtFollow"
                            style="@style/TextStyleNormalRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_10"
                            android:layout_gravity="center_vertical"
                            android:text="@string/txt_unfollow"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lytRemove"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="gone"
                        android:paddingTop="@dimen/margin_5"
                        android:paddingBottom="@dimen/margin_5"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/margin_13"
                            android:layout_height="@dimen/margin_13"
                            android:src="@drawable/ic_cancel_grey"
                            app:tint="@color/grey_dark"
                            android:layout_gravity="center"
                            />
                        <TextView
                            style="@style/TextStyleNormalRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_10"
                            android:layout_gravity="center_vertical"
                            android:text="@string/txt_delete"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>